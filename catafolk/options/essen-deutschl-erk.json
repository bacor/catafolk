{
    "dataset_id": "essen-deutschl-erk",
    "file_pattern": "*.krn",
    "file_encoding": "ISO-8859-1",
    "default_field_values": {
        "has_music": true,
        "has_lyrics": false
    },
    "override_field_values": {
        "preview_url": "https://verovio.humdrum.org/?file=essen/europa/deutschl/erk/{path}",
        "url": "https://kern.humdrum.org/cgi-bin/ksdata?file={path}&l=essen/europa/deutschl/erk&format=kern"
    },
    "meta_fields_conversion": {
        "OTL": {
            "type": "transform",
            "field": "title",
            "transform": "capitalize"
        },
        "ARE": "location",
        "YEM": "copyright",
        "AMT": "metric_classification",
        "EED": "encoder",
        "EEV": "version",
        "AGN": "genre",
        "SCT": {
            "type": "regex",
            "pattern": "(E0*((\\d+)(\\w+)?))",
            "groups": ["catalogue_num", "source_song_num", "source_key"],
            "transform": "lowercase",
            "default": "source_song_num"
        }
    },
    "meta_values_conversion": {
        "source_key": {
            "type": "numeric_bins",
            "bins": [
                { "min": 0, "max": 220, "value": "erk1893liederhort1" },
                { "min": 221, "max": 1060, "value": "erk1893liederhort2"},
                { "min": 1061, "max": 2175, "value": "erk1893liederhort3"}
            ]
        }
    }
}