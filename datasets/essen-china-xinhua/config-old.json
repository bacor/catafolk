{
    "dataset_id": "essen-china-xinhua",
    "sources": [{
        "name": "file",
        "type": "file",
        "file_pattern": "data/*.krn",
        "file_options": {
            "encoding": "ISO-8859-1"
        }
    }],
    "transformations": [
        ["rename", "file.cf_checksum", "checksum"],
        ["rename", "file.cf_path", "path"],
        ["rename", "file.cf_format", "format"],
        ["constant", "dataset_id", "essen-china-xinhua"],
        ["constant", "has_music", true],
        ["constant", "has_lyrics", false],
        ["rename", "file.OTL", "title"],
        ["rename", "file.ARE", "location"],
        ["rename", "file.YEM", "copyright"],
        ["rename", "file.AMT", "metric_classification"],
        ["rename", "file.EED", "encoder"],
        ["rename", "file.EEV", "version"],
        ["rename", "file.AGN", "genre"],
        ["rename", "file.SCT", "catalogue_num"],
        [
            "format", "path", "preview_url", 
            {"pattern": "https://verovio.humdrum.org/?file=essen/asia/china/xinhua/{}"}
        ],
        [
            "format", "path", "url", 
            {"pattern": "https://kern.humdrum.org/cgi-bin/ksdata?file={}&l=essen/asia/china/xinhua&format=kern"}
        ]
    ]
}